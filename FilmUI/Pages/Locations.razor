@page "/locations"
@inherits ListPageBase<LocationDto>

<HeaderPlus Title=@ListTitle
            ActionUrl=@($"{EditRoute}/0")
            ActionTooltip="Add new location" />

<LoadingOrEmptyOrList Items="Items">
    <ul class="list-group">
        @foreach (var location in Items)
        {
            <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="fw-bold">@location.ShortDescription</div>
                    <a class="btn btn-sm btn-outline-primary" href="@EditRoute/@location.Id" title="Edit">
                        <i class="bi bi-pencil"></i>
                    </a>
                </div>
            </li>
        }
    </ul>
</LoadingOrEmptyOrList>

@code {
    protected override PageKey Page => PageKey.Locations;
}
