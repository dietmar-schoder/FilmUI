@page "/shootingdays"
@inherits ListPageBase<ShootingDayDto>

<HeaderPlus Title=@ListTitle
            AddUrl=@($"{EditRoute}/0")
            AddTooltip="Add new shootingday" />

<LoadingOrEmptyOrList Items="Items">
    <ul class="list-group">
        @foreach (var shooting in Items)
        {
            <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="fw-bold">
                        @shooting.Number @shooting.ShortDescription
                        <span class="fw-normal text-muted ms-2">
                            @shooting.ShootingDate?.ToString("ddd dd/MM/yyyy")
                        </span>
                    </div>
                    <div class="d-flex align-items-center">
                        <ProgressIcon Progress="@shooting.Progress" />
                        <a class="btn btn-sm btn-outline-primary" href="@EditRoute/@shooting.Id" title="Edit">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </div>
                </div>
            </li>
        }
    </ul>
</LoadingOrEmptyOrList>

@code {
    protected override PageKey Page => PageKey.ShootingDays;
}
