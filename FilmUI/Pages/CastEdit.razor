@page "/cast/edit/{Id:int}"
@inherits EditPageBaseInt<CastDto>

<Edit TDto="CastDto" DeleteMessage="Are you sure you want to delete this cast member?" Logic="this">
    <div class="mb-3">
        <label class="form-label fw-bold">Role</label>
        <input class="form-control" @bind="Item.Role" />
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold">Actor</label>
        <input class="form-control" @bind="Item.Actor" />
    </div>
</Edit>
