@page "/shots"
@inherits ListPageBase<ShotDto>

<HeaderPlus Title=@ListTitle
            ActionUrl=@($"{EditRoute}/0")
            ActionTooltip="Add new shot" />

<LoadingOrEmptyOrList Items="Items">
    <ul class="list-group">
        @foreach (var shot in Items)
        {
            <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="fw-bold">@shot.ShortDescription</div>
                    <div class="d-flex align-items-center">
                        <ProgressIcon Progress="@shot.Progress" />
                        <a class="btn btn-sm btn-outline-primary" href="@EditRoute/@shot.Id" title="Edit">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </div>
                </div>
            </li>
        }
    </ul>
</LoadingOrEmptyOrList>

@code {
    protected override PageKey Page => PageKey.Shots;
}
