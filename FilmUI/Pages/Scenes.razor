@page "/scenes"
@inherits ListPageBase<SceneDto>

<HeaderPlus Title=@ListTitle
            AddUrl=@($"{EditRoute}/0")
            AddTooltip="Add new scene" />

<LoadingOrEmptyOrList Items="Items">
    <ul class="list-group">
        @foreach (var scene in Items)
        {
            <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fw-bold">@scene.Number @scene.ShortDescription</div>
                    </div>
                    <a class="btn btn-sm btn-outline-primary" href="@EditRoute/@scene.Id" title="Edit">
                        <i class="bi bi-pencil"></i>
                    </a>
                </div>
            </li>
        }
    </ul>
</LoadingOrEmptyOrList>

@code {
    protected override PageKey Page => PageKey.Scenes;
}
