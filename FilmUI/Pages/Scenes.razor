@page "/scenes"
@inherits ListPageBase<SceneDto>

<HeaderPlus Title="Scenes"
            ActionUrl="/scene/edit/0"
            ActionTooltip="Add new scene" />

<LoadingOrEmptyOrList Items="Items">
    <ul class="list-group">
        @foreach (var scene in Items)
        {
            <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fw-bold">@scene.Number @scene.ShortDescription</div>
                    </div>
                    <a class="btn btn-sm btn-outline-primary" href="/shootingday/edit/@scene.Id" title="Edit">
                        <i class="bi bi-pencil"></i>
                    </a>
                </div>
            </li>
        }
    </ul>
</LoadingOrEmptyOrList>

@code {
    protected override string ApiEndpoint => "/api/films/[FILMID]/scenes";
}
