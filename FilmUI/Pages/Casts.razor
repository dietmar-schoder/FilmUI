@page "/cast"

<h3 class="mb-4 d-flex justify-content-between align-items-center">
    Cast
    <a href="/cast/edit/0" class="btn btn-primary btn-sm" title="Add new cast member">
        <i class="bi bi-plus-lg"></i> Add
    </a>
</h3>

@if (casts == null)
{
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
}
else if (casts.Count == 0)
{
    <div class="alert alert-warning" role="alert">
        No locations found.
    </div>
}
else
{
    <ul class="list-group">
        @foreach (var cast in casts)
        {
            <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fw-bold">@cast.Role</div>
                        <small class="text-muted">Actor: @cast.Actor</small>
                    </div>
                    <a class="btn btn-sm btn-outline-primary" href="/cast/edit/@cast.Id" title="Edit">
                        <i class="bi bi-pencil"></i>
                    </a>
                </div>
            </li>
        }
    </ul>
}
