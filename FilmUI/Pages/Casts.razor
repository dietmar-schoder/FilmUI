@page "/cast"
@inherits ListPageBase<CastDto>

<HeaderPlus Title=@ListTitle
            AddUrl=@($"{EditRoute}/0")
            AddTooltip="Add new cast member" />

<LoadingOrEmptyOrList Items="Items">
    <ul class="list-group">
        @foreach (var cast in Items)
        {
            <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fw-bold">@cast.Role</div>
                        <small class="text-muted">Actor: @cast.Actor</small>
                    </div>
                    <div class="d-flex align-items-center">
                        <ProgressIcon Progress="@cast.Progress" />
                        <a class="btn btn-sm btn-outline-primary" href="@EditRoute/@cast.Id" title="Edit">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </div>
                </div>
            </li>
        }
    </ul>
</LoadingOrEmptyOrList>

@code {
    protected override PageKey Page => PageKey.Cast;
}
