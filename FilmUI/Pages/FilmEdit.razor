@page "/film/edit/{Id:guid}"
@inherits EditPageBaseGuid<FilmDto>

<Edit T="FilmDto" DeleteMessage="Are you sure you want to delete this film?" Logic="this">
    <ProgressSelector T="FilmDto" Value="Item.Progress" OnChanged="v => Item.Progress = v" />
    <div class="mb-3">
        <label class="form-label fw-bold">Title</label>
        <input class="form-control" @bind="Item.Title" />
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold">Notes</label>
        <textarea class="form-control" rows="5" maxlength="4000" @bind="Item.Notes"></textarea>
    </div>
</Edit>
