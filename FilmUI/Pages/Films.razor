@page "/films"

<h3 class="mb-4 d-flex justify-content-between align-items-center">
    Films
    <a href="/film/edit/00000000-0000-0000-0000-000000000000" class="btn btn-primary btn-sm" title="Add new film">
        <i class="bi bi-plus-lg"></i> Add
    </a>
</h3>

@if (films == null)
{
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
}
else if (films.Count == 0)
{
    <div class="alert alert-warning" role="alert">
        No films found.
    </div>
}
else
{
    <ul class="list-group">
        @foreach (var film in films)
        {
            <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fw-bold">@film.Title</div>
                    </div>
                    <a class="btn btn-sm btn-outline-primary" href="/film/edit/@film.Id" title="Edit">
                        <i class="bi bi-pencil"></i>
                    </a>
                </div>
            </li>
        }
    </ul>
}
