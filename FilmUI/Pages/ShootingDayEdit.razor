@page "/shootingday/edit/{Id:int}"
@inherits EditPageBaseInt<ShootingDayDto>

<Edit T="ShootingDayDto" DeleteMessage="Are you sure you want to delete this shooting day?" Logic="this">
    <ProgressSelector T="ShootingDayDto" Value="Item.Progress" OnChanged="v => Item.Progress = v" />
    <div class="mb-3">
        <label class="form-label fw-bold">Number</label>
        <input class="form-control" @bind="Item.Number" />
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold">Short Description</label>
        <input class="form-control" @bind="Item.ShortDescription" />
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold">Shooting Date</label>
        <InputDate class="form-control" @bind-Value="Item.ShootingDate" />
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold">Notes</label>
        <textarea class="form-control" rows="5" maxlength="4000" @bind="Item.Notes"></textarea>
    </div>
</Edit>
