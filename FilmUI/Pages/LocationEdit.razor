@page "/location/edit/{Id:int}"

@using FilmUI.Components

<div class="d-flex align-items-center mb-3">
    <button class="btn btn-link p-0 me-2" @onclick="GoBack" title="Go back" style="font-size: 1.5rem;">
        <i class="bi bi-arrow-left"></i>
    </button>
    <h3 class="m-0 flex-grow-1">@PageTitle</h3>
    @if (Id != 0)
    {
        <button class="btn btn-outline-danger btn-sm ms-2" data-bs-toggle="modal" data-bs-target="#deleteModal">
            <i class="bi bi-trash"></i> Delete
        </button>
    }
</div>

@if (location is null)
{
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
}
else
{
    <div class="mb-3">
        <label class="form-label fw-bold">Short Description</label>
        <input class="form-control" @bind="location.ShortDescription" />
    </div>
    <div class="d-flex flex-column gap-2" style="width: 150px;">
        <button class="btn btn-outline-secondary" @onclick="GoBack">Cancel</button>
        <button class="btn btn-primary" @onclick="Save">Save</button>
    </div>
    <DeleteModal ModalId="deleteModal"
                 Title="Confirm Deletion"
                 Message="Are you sure you want to delete this location?"
                 OnConfirm="ConfirmDelete" />
}
