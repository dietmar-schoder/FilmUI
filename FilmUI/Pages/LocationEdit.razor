@page "/location/edit/{Id:int}"
@inherits EditPageBaseInt<LocationDto>

<Edit T="LocationDto" DeleteMessage="Are you sure you want to delete this location?" Logic="this">
    <ProgressSelector T="LocationDto" Value="Item.Progress" OnChanged="v => Item.Progress = v" />
    <div class="mb-3">
        <label class="form-label fw-bold">Short Description</label>
        <input class="form-control" @bind="Item.ShortDescription" />
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold">Notes</label>
        <textarea class="form-control" rows="5" maxlength="4000" @bind="Item.Notes"></textarea>
    </div>
</Edit>
