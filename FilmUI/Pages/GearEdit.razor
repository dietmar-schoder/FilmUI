@page "/gear/edit/{Id:int}"
@inherits EditPageBaseInt<GearDto>

<Edit T="GearDto" DeleteMessage="Are you sure you want to delete this gear?" Logic="this">
    <ProgressSelector T="GearDto" Value="Item.Progress" OnChanged="v => Item.Progress = v" />
    <div class="mb-3">
        <label class="form-label fw-bold">Short Description</label>
        <input class="form-control" @bind="Item.ShortDescription" />
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold">Notes</label>
        <textarea class="form-control" rows="5" maxlength="4000" @bind="Item.Notes"></textarea>
    </div>
</Edit>
