@page "/register"
@inherits ApiPageBase

<h3>Register</h3>

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger">@ErrorMessage</div>
}

<EditForm Model="@registerDto" OnValidSubmit="RegisterUser">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <InputText @bind-Value="registerDto.Email" placeholder="Email" class="form-control mb-2" />
    <InputText @bind-Value="registerDto.Password" placeholder="Password" type="password" class="form-control mb-2" />

    <button type="submit" class="btn btn-primary">Register</button>
</EditForm>
