@using FilmUI.Helpers

@if (!string.IsNullOrWhiteSpace(shootingsDuration))
{
    <div class="alert alert-secondary d-flex align-items-center py-2 mb-4" role="alert">
        <i class="bi bi-clock-history me-2"></i>
        <span class="fw-semibold me-4">@shootingsDuration</span>
        <i class="bi bi-film me-2"></i>
        <span class="fw-semibold">@shotsDuration</span>
    </div>
}

@code {
    [Parameter]
    public IEnumerable<BaseDtoWithShotsDto> Items { get; set; }

    private string shootingsDuration;
    private string shotsDuration;

    protected override void OnParametersSet()
    {
        shootingsDuration = Items?.ShootingsDuration();
        shotsDuration = Items?.ShotsDuration();
    }
}
